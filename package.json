{
  "name": "mru-tabs",
  "version": "0.1.0",
  "description": "An MRU Tab switcher",
  "private": true,
  "scripts": {
    "watch": "webpack --mode=development --watch --config config/webpack.config.js",
    "build": "tsc && webpack --mode=production --config config/webpack.config.js",
    "pack": "node pack.js",
    "repack": "npm run build && npm run pack",
    "format": "prettier --write --ignore-unknown \"{config,public,src}/**/*.{html,css,js,ts,json}\""
  },
  "devDependencies": {
    "@types/chrome": "^0.0.256",
    "adm-zip": "^0.5.12",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.10.0",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.8.1",
    "prettier": "^2.8.8",
    "webpack": "^5.90.3",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.10.0"
  },
  "dependencies": {
    "typescript": "^5.4.2"
  }
}
